<%= render :partial => 'shared/navbar' %>

<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 fst-italic">Title of a longer featured blog post</h1>
    <p class="lead my-3">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what’s most interesting in this post’s contents.</p>
    <p class="lead mb-0"><a href="#" class="text-white fw-bold">Continue reading...</a></p>
  </div>
</div>

<div class="container">
  <div class="row text-center">
    <div class="col">
    <%= link_to "Create Article", new_article_path, :class => "btn btn-primary create-article-btn" %>
    </div>
  </div>
  <div class="row" style="margin-top: 5%;margin-bottom: 2%">
    <div class="col">
      <h1>Recent Articles : </h1>
    </div>
    <div class="col">
      <%= link_to "View Favorites", index_path, :class => "fixed-right" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <% @articles.each do |article| %>
        <div style="padding: 10px">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">Checkout the blog</h6>
              <p class="card-text"><%= article.description.truncate(30) %></p>
              <a href="<%= article_path(article) %>" class="card-link">Read Article</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render :partial => 'shared/footer' %>