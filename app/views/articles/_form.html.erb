<div class="container input-form">
  <div class="col">
        <%= form_with model: @article do |f| %>
            <div class="form-group">
              <label for="formGroupExampleInput">Title</label>
              <%= f.text_field :title, :class => "form-control", :id =>"formGroupExampleInput" %>
              <% @article.errors.full_messages_for(:title).each do |message| %>
                <div><%= message %></div>
              <% end %>

            </div>
            <div class="form-group">
              <label for="formGroupExampleInput2">Article</label>
              <%= f.text_area :description, :class => "form-control text-area-style" %>
              <% @article.errors.full_messages_for(:description).each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
            <div>
              <%= f.submit "Submit", :class => "btn btn-success" %>
            </div>

        <% end %>
    </div>
</div>